@using OdeToFood.Core

@model Restaurant

<div class="card card-deck">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="card">
        <td>
            <a class="btn btn-info"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">Details</a>
        </td>
        <td>
            <a class="btn btn-info"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">Edit</a>
        </td>
        <td>
            <a class="btn btn-info"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">Delete</a>
        </td>
    </div>
</div>